# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SCOPES=read_products,write_products,read_orders,write_orders
SHOPIFY_APP_URL=https://your-app-url.com

# Database
DATABASE_URL=postgresql://user:password@host:port/database
DIRECT_URL=postgresql://user:password@host:port/database

# N8N Webhooks for Different Plans
# Default N8N webhook (for BASIC and UNLIMITED plans)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/default-workflow

# BYOK Plan N8N webhook (uses customer's own OpenAI API key)
N8N_WEBHOOK_BYOK=https://your-n8n-instance.com/webhook/byok-workflow

# API Security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
INTERNAL_API_KEY=your_internal_api_key_here

# Encryption for API Keys
# CRITICAL: Generate a secure 32-byte hex key with:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Optional: N8N API Key (if using N8N API)
N8N_API_KEY=your_n8n_api_key_here

# Optional: Sentry for Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
FRONTEND_PORT=8002
HOST=https://your-app-url.com

# Optional: Custom Shop Domain
# SHOP_CUSTOM_DOMAIN=your-custom-domain.myshopify.com
