      const icon = icons[action.action] || '‚ñ∂Ô∏è';
      button.style.cssText = `
        background: ${widgetSettings.primaryColor || '#ee5cee'};
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
