{% schema %}
{
  "name": "AI Sales Assistant",
  "target": "body",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enable AI Assistant",
      "default": true
    },
    {
      "type": "select",
      "id": "position",
      "label": "Position",
      "options": [
        { "value": "bottom-right", "label": "Bottom Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "top-left", "label": "Top Left" },
        { "value": "center-right", "label": "Center Right" },
        { "value": "center-left", "label": "Center Left" }
      ],
      "default": "bottom-right"
    },
    {
      "type": "header",
      "content": "General Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Ask AI Assistant"
    },
    {
      "type": "text",
      "id": "chat_title",
      "label": "Chat Title",
      "default": "AI Sales Assistant"
    },
    {
      "type": "text",
      "id": "status_text",
      "label": "Status Text",
      "default": "Online"
    },
    {
      "type": "text",
      "id": "close_button_label",
      "label": "Close Button Label",
      "default": "Close"
    },
    {
      "type": "textarea",
      "id": "welcome_message",
      "label": "Welcome Message",
      "default": "Hello! I'm your AI sales assistant. I can help you find products, answer questions, and provide personalized recommendations."
    },
    {
      "type": "text",
      "id": "input_placeholder",
      "label": "Input Placeholder (Leave empty to use language setting)",
      "info": "Custom placeholder text. Leave empty to use translated text based on interface language."
    },
    {
      "type": "color",
      "id": "primary_color",
      "label": "Primary Color",
      "default": "#ee5cee"
    },
    {
      "type": "select",
      "id": "interface_language",
      "label": "Chatbot Interface Language",
      "info": "Language for chatbot UI elements (buttons, labels, etc.). AI responses will auto-detect customer language.",
      "options": [
        { "value": "en", "label": "English" },
        { "value": "es", "label": "Español" },
        { "value": "fr", "label": "Français" },
        { "value": "de", "label": "Deutsch" },
        { "value": "ja", "label": "日本語" },
        { "value": "it", "label": "Italiano" },
        { "value": "pt", "label": "Português" },
        { "value": "zh", "label": "中文" }
      ],
      "default": "en"
    },
    {
      "type": "header",
      "content": "Welcome Screen - Quick Actions"
    },
    {
      "type": "paragraph",
      "content": "Quick action button labels will automatically use the selected Interface Language. You can override them below with custom text if needed."
    },
    {
      "type": "text",
      "id": "section_discovery_label",
      "label": "Product Discovery Section Label (optional)",
      "info": "Leave empty to use translated text"
    },
    {
      "type": "text",
      "id": "best_sellers_text",
      "label": "Best Sellers Button (optional)",
      "info": "Leave empty to use translated text"
    },
    {
      "type": "text",
      "id": "new_arrivals_text",
      "label": "New Arrivals Button (optional)",
      "info": "Leave empty to use translated text"
    },
    {
      "type": "text",
      "id": "on_sale_text",
      "label": "On Sale Button (optional)",
      "info": "Leave empty to use translated text"
    },
    {
      "type": "text",
      "id": "recommendations_text",
      "label": "Recommendations Button (optional)",
      "info": "Leave empty to use translated text"
    },
    {
      "type": "header",
      "content": "Welcome Screen - Support Actions"
    },
    {
      "type": "text",
      "id": "section_support_label",
      "label": "Support Section Label (optional)",
      "info": "Leave empty to use translated text"
    },
    {
      "type": "text",
      "id": "shipping_text",
      "label": "Shipping Button (optional)",
      "info": "Leave empty to use translated text"
    },
    {
      "type": "text",
      "id": "returns_text",
      "label": "Returns Button (optional)",
      "info": "Leave empty to use translated text"
    },
    {
      "type": "text",
      "id": "track_order_text",
      "label": "Track Order Button (optional)",
      "info": "Leave empty to use translated text"
    },
    {
      "type": "text",
      "id": "help_text",
      "label": "Help Button (optional)",
      "info": "Leave empty to use translated text"
    }
  ]
}
{% endschema %}

<!-- Only render if enabled -->
{% if block.settings.enabled %}

<!-- 1. Render container -->
<div id="ai-sales-assistant-container"></div>

<!-- 2. Expose settings to JavaScript -->
<script>
  window.aiSalesAssistantSettings = {
    enabled: {{ block.settings.enabled | default: true | json }},
    position: {{ block.settings.position | default: "bottom-right" | json }},
    buttonText: {{ block.settings.button_text | default: "Ask AI Assistant" | json }},
    chatTitle: {{ block.settings.chat_title | default: "AI Sales Assistant" | json }},
    statusText: {{ block.settings.status_text | default: "Online" | json }},
    closeButtonLabel: {{ block.settings.close_button_label | default: "Close" | json }},
    welcomeMessage: {{ block.settings.welcome_message | default: "Hello! I'm your AI sales assistant. How can I help you today?" | json }},
    inputPlaceholder: {{ block.settings.input_placeholder | json }},
    primaryColor: {{ block.settings.primary_color | default: "#ee5cee" | json }},
    interfaceLanguage: {{ block.settings.interface_language | default: "en" | json }},

    // Quick action labels - empty by default to use translations
    sectionDiscoveryLabel: {{ block.settings.section_discovery_label | json }},
    bestSellersText: {{ block.settings.best_sellers_text | json }},
    newArrivalsText: {{ block.settings.new_arrivals_text | json }},
    onSaleText: {{ block.settings.on_sale_text | json }},
    recommendationsText: {{ block.settings.recommendations_text | json }},
    sectionSupportLabel: {{ block.settings.section_support_label | json }},
    shippingText: {{ block.settings.shipping_text | json }},
    returnsText: {{ block.settings.returns_text | json }},
    trackOrderText: {{ block.settings.track_order_text | json }},
    helpText: {{ block.settings.help_text | json }},
    
    // Shop data
    shopDomain: {{ shop.permanent_domain | json }},
    currency: {{ shop.currency | json }}
  };
</script>

<!-- 3. Load widget assets from Vercel -->
<link rel="stylesheet" href="https://shopibot.vercel.app/widget.css">
<script src="https://shopibot.vercel.app/widget.js" defer></script>

{% endif %}